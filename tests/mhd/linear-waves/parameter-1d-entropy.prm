subsection Output
  set Simulation identifier = 1d-entropy-wave
end
subsection MHD
  subsection Finite element
    set Polynomial degree = 1
  end
  subsection Mesh
    set Grid type       = Hypercube
    set Number of cells = 32
    set Point 1         = 0.
    set Point 2         = 1.
    subsection Boundary conditions
      set lower x = periodic
      set upper x = periodic
    end
  end
  subsection Time stepping
    set Final time     = 2
    set Method         = ERK4
    set Time step size = 0.005
  end
end
subsection Physical parameters
  set rho_0      = 1.
  set P_0        = 0.6
  set u_0        = 1., 0., 0.
  set b_0        = 0., 0., 0.
  set Amplitude  = 1e-4
  set Eigenmodes = 0, 0, 0, 1, 0, 0, 0, 0, 0
  set Direction  = 1, 0, 0
end
