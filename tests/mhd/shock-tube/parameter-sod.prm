subsection Output
  set Base file name               = solution
  set Format                       = pvtu
  set Number of digits for counter = 5
  set Output frequency             = 1
  set Results folder               = ./results
  set Simulation identifier        = shock-tube-limited
end
subsection MHD
  subsection Finite element
    set Polynomial degree = 1
  end
  subsection Mesh
    set Grid type       = Hypercube
    set Number of cells = 256
    set Point 1         = -0.5
    set Point 2         = 0.5
    subsection Boundary conditions
      set lower x = zero inflow
      set upper x = zero inflow
    end
  end
  subsection Plasma properties
    set Adiabatic index = 1.4
  end
  subsection Time stepping
    set Final time     = 0.25
    set Method         = FE
    set Time step size = 0.0005
  end
end
subsection Physical parameters
  set Test case = 0
end
